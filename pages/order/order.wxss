@import "/style/common.wxss";
.body .widget{
    margin-top: 10px;
    background: #fff;
    border-bottom: 1px solid #EBEBEB;
    border-top: 1px solid #EBEBEB;
}
.body .from-group{
    padding: 10px 10px 10px 0px;
    display: flex;
    line-height: 24px;
    position: relative;
    margin-left: 15px;
}
.body .botton-line{
    border-bottom: 1px solid #EBEBEB;
}
.body .top-line{
    border-top: 1px solid #EBEBEB;
}
.body .from-group .from-title{
    flex: 3;
    line-height: 24px;
    height: 24px;
    font-weight: 600;
}
.body .from-group .form-input{
    text-align: right;
}
/*buy*/
.buy{
  display: flex;
  flex-direction: row;
  text-align: center;
  position: fixed;
  bottom: 0px;
  left: 0px;
  border-top: 1px solid #EBEBEB;
  width: 100%;
  height: 32px;
  line-height: 32px;
}
.buy .buy-num{
  flex: 2;
  color: #f60;
}
.buy .buy-btn{
  flex: 8;
  background: #f60;
  color: #fff;
  border-radius:0px;
  font-size: 14px;
}
/*item*/
.widgets{
  background: #fff;
}
.border-top{
  border-top: 1px solid #EBEBEB;
}
.widgets .widget-title{
  font-size: 16px;
  line-height: 32px;
  color: #f60; 
  border-bottom: 1px solid #EBEBEB;
  padding: 5px 10px 2px;
  font-weight: bold;
}
.widgets .black{
  color: #333;
}
.widgets .widget{
  border-bottom: 1px solid #EBEBEB;
  display:flex;
  flex-direction: row;
  padding: 10px 10px 5px;
}
.widgets .widget-left{
  flex: 2;
}
.widgets .image-title image{
  height: 60px;
  width: 60px;
  border-radius: 5px;
}
.widgets .widget-center{
  flex: 8;
  padding-left: 5px;
}
.widgets .widget-center .title{
  font-size: 16px;
  line-height: 28px;
  font-weight: bold;
  overflow:hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.widgets .widget-center .desc{
  font-size: 12px;
  color: #999;
  line-height: 28px;
  overflow:hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.widgets .widget-center .btn-group{
  display: flex;
  justify-content: flex-start;
  margin-top: 2px;
}
.widgets .widget-center .btn-group button{
  padding: 0px 5px;
  margin: 0px 5px 0px 0px;
  height: 18px;
  line-height: 18px;
  font-size: 12px;
  background: #f60;
}
.widgets .widget-center .btn-group .bg-green{
  background: #f9b048;
}