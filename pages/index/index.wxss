@import "/style/common.wxss";
.container{
  background: #EFF0EB;
}
/*search box*/
.widget-search{
  height: 50px;
  padding-top: 12px;
  background: #FFF;
  display:flex;
  flex-direction: row;
  justify-content: center;
  margin-bottom: 10px;
}
.widget-search .widget{
  height: 32px;
  line-height: 32px;
  border: 1px solid #EBEBEB;
  border-radius: 5px;
  display: flex;
  width: 80%;
}
.widget-search .widget-img{
    flex: 1;
    justify-content: center;
    text-align: center;
}
.widget-img image{
    width: 18px;
    height: 18px;
    vertical-align: middle;
    text-align: center;
}
.widget-search .widget-text{
    flex: 9;
}
/* swiper */
.widgets .swiper{
  height: 103px;
  overflow: hidden;
}
/*history box*/
.widgets{
  background: #fff;
}
.border-top{
  border-top: 1px solid #EBEBEB;
}
.widgets .widget-title{
  font-size: 16px;
  line-height: 32px;
  color: #f60; 
  border-bottom: 1px solid #EBEBEB;
  padding: 5px 10px 2px;
  font-weight: bold;
}
.widgets .black{
  color: #333;
}
.widgets .widget{
  border-bottom: 1px solid #EBEBEB;
  display:flex;
  flex-direction: row;
  padding: 10px 10px 5px;
}
.widgets .widget-left{
  flex: 2;
}
.widgets .image-title image{
  height: 80px;
  width: 80px;
  border-radius: 5px;
}
.widgets .widget-center{
  flex: 6;
  padding-left: 5px;
}
.widgets .widget-center .title{
  font-size: 16px;
  line-height: 28px;
  font-weight: bold;
  overflow:hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.widgets .widget-center .desc{
  font-size: 12px;
  color: #999;
  line-height: 28px;
  overflow:hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.widgets .widget-center .btn-group{
  display: flex;
  justify-content: flex-start;
  margin-top: 2px;
}
.widgets .widget-center .btn-group button{
  padding: 0px 5px;
  margin: 0px 5px 0px 0px;
  height: 18px;
  line-height: 18px;
  font-size: 12px;
  background: #f60;
}
.widgets .widget-center .btn-group .bg-green{
  background: #f9b048;
}
.widgets .widget-right{
  flex: 2;
  width: 80px;
  text-align: center;
  padding-top: 10px;
}
.widgets .widget-right .distance{
  margin-bottom: 10px;
  color: #f60;
  font-size: 12px;
}
.widgets .widget-right image{
  height: 20px;
  width: 20px;
  vertical-align: middle;
}