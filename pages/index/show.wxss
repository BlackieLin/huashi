/* pages/index/show.wxss */
.body .c-img{
 width: 100%;
 text-align: center;
}
.c-img image{
  width: 100%;
}
.body .c-title{
  font-size: 16px;
  font-weight: bold;
  padding: 10px;
}
.body .c-content{
  font-size: 14px;
  line-height: 24px;
  padding: 0px 10px;
}
.buy{
  display: flex;
  flex-direction: row;
  text-align: center;
  position: fixed;
  bottom: 0px;
  left: 0px;
  border-top: 1px solid #EBEBEB;
  width: 100%;
  height: 32px;
  line-height: 32px;
}
.buy .buy-num{
  flex: 2;
  color: #f60;
}
.buy .buy-btn{
  flex: 8;
  background: #f60;
  color: #fff;
}