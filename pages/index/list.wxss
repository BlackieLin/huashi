@import "/style/common.wxss";
.container{
  background: #EFF0EB;
}
/*seller box*/
.widget-seller{
  background: #f60;
}
.widget-seller .widget-title{
  font-size: 16px;
  line-height: 32px;
  color: #f60; 
  border-bottom: 1px solid #EBEBEB;
  padding: 5px 10px 2px;
  font-weight: bold;
}
.widget-seller .black{
  color: #333;
}
.widget-seller .widget{
  border-bottom: 1px solid #EBEBEB;
  display:flex;
  flex-direction: row;
  padding: 10px 10px 5px;
}
.widget-seller .widget-left{
  flex: 2;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.widget-seller .image-title image{
  height: 60px;
  width: 60px;
  border-radius: 50%;
  border: 1px solid #fff;
}
.widget-seller .widget-center{
  flex: 6;
  padding-left: 5px;
}
.widget-seller .widget-center .title{
  font-size: 16px;
  line-height: 28px;
  font-weight: bold;
  overflow:hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  color: #fff;
}
.widget-seller .widget-center .desc{
  font-size: 12px;
  color: #fff;
  line-height: 28px;
  overflow:hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.widget-seller .widget-center .btn-group{
  display: flex;
  justify-content: flex-start;
  margin-top: 2px;
}
.widget-seller .widget-center .btn-group button{
  padding: 0px 5px;
  margin: 0px 5px 0px 0px;
  height: 18px;
  line-height: 18px;
  font-size: 12px;
  background: #f60;
}
.widget-seller .widget-center .btn-group .bg-green{
  background: #f9b048;
}
.widget-seller .widget-right{
  flex: 2;
  width: 80px;
  text-align: center;
  padding-top: 20px;
}
.widget-seller .widget-right .distance{
  margin-bottom: 10px;
  color: #f60;
  font-size: 12px;
}
.widget-seller .widget-right image{
  height: 20px;
  width: 20px;
  vertical-align: middle;
}
